@{
    ViewData["Title"] = "Index";
}
@model List<Product>

<h2>Ürünler</h2>
<hr />

<a asp-action="Add" asp-controller="Product" class="btn btn-primary btn-sm mb-2">Ekle</a>

@if (Model.Count == 0)
{
    <div class="alert alert-danger col-md-4 mb-2">Henüz ürün eklenmedi !</div>
}

<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Adı</td>
            <td>Fiyatı</td>
            <td>Durumu</td>
            <td>İşlemler</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    @if (product.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Pasif</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>